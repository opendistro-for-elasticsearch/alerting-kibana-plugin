{
  "name": "sample_monitor_workflow",
  "enabled": true,
  "schedule": {
    "period": {
      "interval": "1",
      "unit": "MINUTES"
    }
  },
  "inputs": [
    {
      "search": {
        "indices": ["alerting*"],
        "query": {
          "query": {
            "match_all": {}
          }
        }
      }
    }
  ],
  "triggers": [
    {
      "name": "sample_trigger",
      "severity": "3",
      "condition": {
        "script": {
          "source": "ctx.results[0].hits.total.value < 1",
          "lang": "painless"
        }
      },
      "actions": []
    }
  ]
}
